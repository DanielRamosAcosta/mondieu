{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "experimentalDecorators": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths": {
          "components/*": ["app/components/*/index"],
          "modules/*": ["app/modules/*"]
        }
    }
}
